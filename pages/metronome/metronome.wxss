/* pages/metronome/metronome.wxss */

page {
  height: 100%;
}

.page-wrapper {
  color: #333;
  height: 100%;
  padding-bottom: 150px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.number-indicator-wrapper {
  padding: 8px 0;
  display: flex;
  justify-content: center;
}
.number-indicator {
  font-size: 46px;
}
.number-indicator--initial--actived {
  color: rgb(127, 170, 92);
}

.dots-wrapper {
  padding: 8px 0;
  display: flex;
  justify-content: center;
}
.dot {
  flex: none;
  margin: 0 8px;
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: rgb(221, 221, 221);
  color: #51a938;
}
.dot--initial--actived {
  background-color: rgb(127, 170, 92);
}
.dot--simple--actived {
  background-color: rgb(85, 85, 85);
}

.slider-wrapper {
  padding: 8px 0;
}

.bpm-wrapper {
  padding: 8px 0;
  display: flex;
  justify-content: center;
}

.bpm-text {
  font-size: 28px;
}